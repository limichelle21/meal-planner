<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :recipe_name %>
  </div>

  <div class="field">
    <%= form.label :instructions %>
    <%= form.text_area :instructions, id: :recipe_instructions %>
  </div>

  <div class="form-group">
		<%= render partial: 'ingredients/form', locals: { f: form, ingredients: @recipe.ingredients} %>
  </div>

  <div class="form-group">
    <%= render partial: 'tags/form', locals: { f: form, tags: @recipe.tags} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
